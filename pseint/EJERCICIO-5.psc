Proceso AREA_CIRCUNFERENCIA
	Definir constante_PI, radio, area Como Real;
	
	Escribir "Ingresa los siguientes datos para calcular el area de la circunferencia";
	Escribir "RADIO en cm o m";
	Leer radio;
	constante_PI=3.14;
	area= constante_PI * (radio*radio);
	
	Escribir "el Area de esta circunferencia es " area "cm o m";
	
	
	
FinProceso
